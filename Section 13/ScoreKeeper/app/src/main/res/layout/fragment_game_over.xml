<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:background="@color/court"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".GameOverFragment" >

    <ImageView
        android:id="@+id/game_over_fragment_iv_basketball_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/basketball_description"
        android:src="@drawable/ic_basketball" />

    <TextView
        android:id="@+id/game_over_fragment_tv_team1_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/squada_one"
        android:padding="20dp"
        android:text="@string/placeholder_final_score"
        android:textAlignment="center"
        android:textColor="@color/team1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/game_over_fragment_tv_team2_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/squada_one"
        android:padding="20dp"
        android:text="@string/placeholder_final_score"
        android:textAlignment="center"
        android:textColor="@color/team2"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/game_over_fragment_tv_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/squada_one"
        android:padding="20dp"
        android:text="@string/placeholder_final_score"
        android:textAlignment="center"
        android:textSize="64sp" />

    <Button
        android:id="@+id/game_over_fragment_bt_new_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/ewing"
        android:fontFamily="@font/squada_one"
        android:text="@string/button_new_game_text"
        android:textSize="36sp"
        app:cornerRadius="20dp" />

    <ImageView
        android:id="@+id/game_over_fragment_iv_basketball_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/basketball_description"
        android:src="@drawable/ic_basketball" />
</LinearLayout>