            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:fontFamily="@font/squada_one"
            android:paddingTop="10dp"
            android:text="@string/placeholder_score"
            android:textAlignment="center"
            android:textColor="@color/team2"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/game_fragment_tv_team2_q1"
            app:layout_constraintEnd_toStartOf="@+id/game_fragment_tv_team2_q3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/game_fragment_tv_team2_q1"
