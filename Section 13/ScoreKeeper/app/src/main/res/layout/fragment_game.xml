            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team1"
            android:fontFamily="@font/squada_one"
            android:text="@string/button_ft"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/game_fragment_bt_team1_2pt"
            app:layout_constraintEnd_toStartOf="@+id/game_fragment_bt_team2_ft"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_fragment_tv_team1_percentage" />

        <Button
            android:id="@+id/game_fragment_bt_team1_2pt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/team1"
            android:fontFamily="@font/squada_one"
            android:text="@string/button_2pt"
            android:textSize="18sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toTopOf="@+id/game_fragment_bt_team1_3pt"
            app:layout_constraintEnd_toStartOf="@+id/game_fragment_bt_team2_2pt"
