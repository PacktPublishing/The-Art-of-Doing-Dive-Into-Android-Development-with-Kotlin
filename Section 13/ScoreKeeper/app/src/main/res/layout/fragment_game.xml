<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:background="@color/court"
    android:fillViewport="true"
    android:padding="10dp"
    tools:context=".GameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/game_fragment_tv_team1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:text="@string/placehodler_team_name"
            android:textColor="@color/team1"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/game_fragment_bt_team1_ft"
            app:layout_constraintStart_toStartOf="@+id/game_fragment_bt_team1_ft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/game_fragment_tv_team2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:text="@string/placehodler_team_name"
            android:textColor="@color/team2"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/game_fragment_bt_team2_ft"
            app:layout_constraintStart_toStartOf="@+id/game_fragment_bt_team2_ft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/game_fragment_tv_team1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:text="@string/placeholder_score"
            android:textColor="@color/black"
            android:textSize="72sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/game_fragment_bt_team1_ft"
            app:layout_constraintStart_toStartOf="@+id/game_fragment_bt_team1_ft"
            app:layout_constraintTop_toBottomOf="@+id/game_fragment_tv_team1_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/game_fragment_tv_team2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/squada_one"
            android:text="@string/placeholder_score"
            android:textColor="@color/black"
            android:textSize="72sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/game_fragment_bt_team2_ft"
            app:layout_constraintStart_toStartOf="@+id/game_fragment_bt_team2_ft"
            app:layout_constraintTop_toBottomOf="@+id/game_fragment_tv_team2_name"
            app:layout_constraintVertical_bias="0.0" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:checkedButton="@id/game_fragment_rb_q1"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_fragment_tv_team1_score"
            app:layout_constraintVertical_bias="0.050000012">

            <RadioButton
